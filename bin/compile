#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install ffmpeg"
BUILD_DIR=$1
VENDOR_DIR="vendor"
FFMPEG_DIR="ffmpeg-latest"
DOWNLOAD_URL="https://johnvansickle.com/ffmpeg/releases/ffmpeg-release-64bit-static.tar.xz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p $FFMPEG_DIR
curl -L --silent $DOWNLOAD_URL | tar xJ -C $FFMPEG_DIR --strip-components=1

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/ffmpeg.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$HOME/vendor/ffmpeg-latest:$PATH"' >> $PROFILE_PATH
